// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  dni         Int     @id @unique
  name        String
  lastName    String
  email       String
  phoneNumber String?
  address     String?
  location    String?
  department  String?
  province    String?
  picture     String?
  admin       Boolean @default(false)
}

model Client {
  dni         Int     @id @unique
  name        String
  lastName    String
  email       String
  phoneNumber String?
  address     String?
  location    String?
  department  String?
  province    String?
  Quotes      Quote[]
}

model Quote {
  id        Int      @id @default(autoincrement())
  date      DateTime @default(now())
  Items     Item[]
  Client    Client?  @relation(fields: [clientDni], references: [dni])
  clientDni Int?
}

model Item {
  id          String @id @default(uuid())
  description String
  price       Int
  quantity    Int
  Quote       Quote? @relation(fields: [quoteId], references: [id])
  quoteId     Int?
}
